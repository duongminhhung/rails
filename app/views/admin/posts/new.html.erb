<h1>New Post</h1>

<%= form_for @post, url: admin_posts_path, html: { class: 'form-horizontal' } do |form| %>
    <% if @post.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.collection_select :user_id, User.all, :id, :name, prompt: 'Select a user', class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Post', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', admin_posts_path, class: 'btn btn-secondary' %>
